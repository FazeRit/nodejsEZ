<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <title>Черги</title>
    <link rel="stylesheet" href="/css/queues.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <h1>Черги</h1>
    <ul>
      <% queues.forEach(queue => { %>
      <li><a href="/<%= queue.id %>"><%= queue.name %></a></li>
      <% }) %>
    </ul>
    <form action="/" method="post">
      <input type="text" name="name" placeholder="Назва черги" />
      <input type="text" name="ownerId" placeholder="ID власника" />
      <button type="submit">Створити чергу</button>
    </form>
  </body>
</html>
